<UserControl x:Class="KerbalSimpit.Debugger.Controls.PeerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KerbalSimpit.Debugger.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="Gray" BorderThickness="1" Margin="5,5,5,0" Padding="5,5,5,5">
        <StackPanel>
            <Grid VerticalAlignment="Top" Margin="0,0,0,5">
                <Label x:Name="Label" Content="Label" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" />
                <Button x:Name="Toggle" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Click="Toggle_Click" Margin="2,2,2,2"/>
            </Grid>

            <Border BorderBrush="Gray" BorderThickness="1">
                <StackPanel x:Name="OutgoingSubscriptionsContainer">
                    <Label Content="OutgoingSubscriptions" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" x:Name="OutgoingSubscriptionsLabel" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>

</UserControl>
